<% if (!_.isUndefined(error)) { %>
  <h1><%= error %></h1>
<% } %>

<div id="login-page">
  <div class="container">
    <div class="row">
  
      <div class="col-lg-4">
        <strong>Benvenuto su Twitter.</strong>
        <p>Scopri cosa dicono, proprio in questo momento, le persone e le organizzazioni che ti interessano.</p>
      </div>

      <div class="col-lg-8">
        <div class="row">
          <div class="col-lg-6 pull-right well">
            <form action="/login" method="post" role="form">
              <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="username" name="username">
                </div>
                <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password">
                </div>
              
                <div class="form-group">
                  <input type="submit" value="Login" class="btn btn-default">
                </div>
              </fieldset>
            </form>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6 pull-right well">

            <form action="/signup" method="post">
              <fieldset>
                <legend>
                  Nuovo su twitter?
                  <span class="text-muted">Registrati</span>
                </legend>
                
                <div class="form-group">
                  <input type="text" name="user[username]" class="form-control" placeholder="username">
                </div>
                <div class="form-group">
                  <input type="text" name="user[display_name]" class="form-control" placeholder="display name">
                </div>
                <div class="form-group">
                  <input type="email" name="user[email]" class="form-control" placeholder="email">
                </div>
                <div class="form-group">
                  <input type="password" name="user[encrypted_password]" class="form-control" placeholder="password">
                </div>
            
  
                <div class="form-group">
                  <input type="submit" value="Registra" class="btn btn-default">
                </div>

              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>